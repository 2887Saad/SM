@{
    ViewData["Title"] = "Home Page";
}
@model Trade
<!-- BEGIN: Content-->
<div class="app-content content ">
    <div class="content-overlay"></div>
    <div class="header-navbar-shadow"></div>
    <div class="content-wrapper container-xxl p-0">
        <div class="content-header row">
            <div class="content-header-left col-md-9 col-12 mb-2">
                <div class="row breadcrumbs-top">
                    <div class="col-12">
                        <h2 class="content-header-title float-start mb-0">Layout collapsed menu</h2>
                        <div class="breadcrumb-wrapper">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a>
                                </li>
                                <li class="breadcrumb-item"><a a asp-controller="Trade" asp-action="Index">Trade</a>
                                </li>
                                <li class="breadcrumb-item active">Delete Trade
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <div class="content-header-right text-md-end col-md-3 col-12 d-md-block d-none">
                <div class="mb-1 breadcrumb-right">
                    <div class="dropdown">
                        <button class="btn-icon btn btn-primary btn-round btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i data-feather="grid"></i></button>
                        <div class="dropdown-menu dropdown-menu-end"><a class="dropdown-item" href="app-todo.html"><i class="me-1" data-feather="check-square"></i><span class="align-middle">Todo</span></a><a class="dropdown-item" href="app-chat.html"><i class="me-1" data-feather="message-square"></i><span class="align-middle">Chat</span></a><a class="dropdown-item" href="app-email.html"><i class="me-1" data-feather="mail"></i><span class="align-middle">Email</span></a><a class="dropdown-item" href="app-calendar.html"><i class="me-1" data-feather="calendar"></i><span class="align-middle">Calendar</span></a></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="content-body">
            <!-- Basic multiple Column Form section start -->
            <section id="multiple-column-form">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Multiple Column</h4>
                            </div>
                            <div class="card-body">
                                <form class="form" asp-controller="Trade" asp-action="Delete" method="post">
                                    <input type="text" hidden asp-for="TradeID">
                                    <div class="row">
                                        <div class="col-md-5 col-12">
                                            <div class="mb-1">
                                                <label class="form-label" asp-for="TradeDate">Date & TIme</label>
                                                <input type="text" disabled id="fp-date-time" asp-for="TradeDate" class="form-control"/>
                                            </div>
                                        </div>
                                        <div class="col-md-5 col-12">
                                            <div class="mb-1">
                                                <label class="form-label" asp-for="CompanyID"></label>
                                                <input type="text" disabled asp-for="ShareCompany.CompanyName" class="form-control" />
                                            </div>
                                        </div>
                                        <div class="col-md-2 col-12">
                                            <div class="form-check form-switch mt-2">
                                                <input disabled type="checkbox" class="form-check-input" asp-for="IsBrokerEngaged"/>
                                                <label class="form-label" asp-for="IsBrokerEngaged">Broker</label>
                                            </div>
                                        </div>
                                        <div class="col-md-4 col-12">
                                            <div class="mb-1">
                                                <label class="form-label" asp-for="TradeType"></label>
                                                <input type="text" disabled class="form-control" asp-for="TradeType"/>
                                            </div>
                                        </div>
                                        <div class="col-md-4 col-12">
                                            <div class="mb-1">
                                                <label class="form-label" asp-for="TradeNature"></label>
                                                <input type="text" disabled asp-for="TradeNature" class="form-control" />
                                            </div>
                                        </div>
                                        <div class="col-md-4 col-12">
                                            <div class="mb-1">
                                                <label class="form-label" asp-for="Quantity"></label>
                                                <input type="text" disabled asp-for="Quantity" class="form-control" />
                                            </div>
                                        </div>
                                        <div class="col-md-4 col-12">
                                            <div class="mb-1">
                                                <label class="form-label" asp-for="TradePrice"></label>
                                                <input type="text" disabled asp-for="TradePrice" class="form-control" />
                                            </div>
                                        </div>
                                        <div class="col-md-4 col-12">
                                            <div class="mb-1">
                                                <label class="form-label" asp-for="TotalAmount"></label>
                                                <input type="text" disabled class="form-control" asp-for="TotalAmount"/>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <button type="submit" class="btn btn-primary me-1">Delete</button>
                                            <button type="reset" class="btn btn-outline-secondary">Back</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>         
</div>     